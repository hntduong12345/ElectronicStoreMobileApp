<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragmentList">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:title="Account"
        android:background="@color/teal_700"
        android:titleTextColor="@color/white"
        app:title="Product"
        app:titleTextColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topbar_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnGetAllUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_weight="1"
            android:text="user" />

        <Button
            android:id="@+id/btnGetAllAdmin"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="admin" />

        <Button
            android:id="@+id/btnGetAllStaff"
            android:backgroundTint="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="staff" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragmentAccountListView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="20dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>