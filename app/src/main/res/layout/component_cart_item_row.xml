<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="134dp">

    <ImageView
        android:id="@+id/imageViewProductCart"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test_product"
        tools:srcCompat="@drawable/test_product" />

    <TextView
        android:id="@+id/textViewProductPriceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:text="100.000.000.000 Ä‘"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductCart"
        app:layout_constraintTop_toBottomOf="@+id/textViewProductNameCart" />

    <TextView
        android:id="@+id/textViewProductNameCart"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="28dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Test Item"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductCart"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPlusCart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/textViewQuantity"
        app:layout_constraintTop_toBottomOf="@+id/textViewProductPriceCart"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/imageViewMinusCart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductCart"
        app:layout_constraintTop_toBottomOf="@+id/textViewProductPriceCart"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="1000"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/imageViewMinusCart"
        app:layout_constraintTop_toBottomOf="@+id/textViewProductPriceCart" />

    <ImageView
        android:id="@+id/imageViewRemoveItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProductNameCart"
        app:srcCompat="@drawable/baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>