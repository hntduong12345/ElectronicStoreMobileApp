<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="admins.ui.products.ProductCreateFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/teal_700"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:title="Update Sale"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextColor="@color/white"
        app:title="Update Sale"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/topbar_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgProductImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/baseline_plus_one_24"
            >

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/txtProductName"
            android:text="productName">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/txtProductId"
            android:text="productId">

        </TextView>

        <EditText
            android:id="@+id/edtDateSale"
            android:layout_width="match_parent"
            android:hint="date sale"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/edtTimeSale"
            android:layout_width="match_parent"
            android:hint="time sale"
            android:layout_height="wrap_content">

        </EditText>

        <Button
            android:id="@+id/btnUpdateSaleProduct"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="Update Sale" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>